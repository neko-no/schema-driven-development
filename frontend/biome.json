{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**/*",
      "!src/apiClient",
      "!src/app/globals.css",
      "public",
      "!public/mockServiceWorker.js"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.test.*"],
      "linter": {
        "rules": {
          "correctness": {
            "noUndeclaredVariables": "off"
          },
          "suspicious": {
            "noEmptyBlockStatements": "off"
          }
        }
      }
    }
  ]
}
